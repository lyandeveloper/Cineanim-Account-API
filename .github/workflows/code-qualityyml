name: Code Quality

on:
  pull_request:
    branches: [main]

jobs:
  pipeline:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Setup Node
        uses: actions/setup-node@v1
        with:
          node-version: 14.x

      - name: Install dependencies
        run: yarn

      - name: Lint commit message
        uses: wagoid/commitlint-github-action@v4

      - name: Linting
        run: yarn lint

      - name: Typecheck
        run: yarn typecheck

      - name: Unit Test
        run: yarn test